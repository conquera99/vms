{
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"react-hooks"
	],
	"extends": [
		"next",
		"next/core-web-vitals",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
	},
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
			"alias": {
				"map": [
					[
						"components",
						"./src/components"
					],
					[
						"hooks",
						"./src/hooks"
					],
					[
						"interfaces",
						"./src/interfaces"
					],
					[
						"styles",
						"./src/styles"
					],
					[
						"utils",
						"./src/utils"
					],
					[
						"contexts",
						"./src/contexts"
					]
				]
			}
		}
	},
	"rules": {
		"@next/next/no-img-element": "off"
	}
}